<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Edit Profile</h2>

              <form action="/edit-userprofile/{{user._id}}" method="POST">
              
                <div class="form-outline mb-4">
                   <label class="form-label" for="form3Example1cg">First Name</label>
                  <input type="text" name="Name" id="form3Example1cg" value="{{user.Name}}" class="form-control form-control-lg"
                    onkeyup="validatename()" />
                 
                  <span id="name-error" style="color:red ;"></span>
                </div>
                <div class="form-outline mb-4">
                   <label class="form-label" for="form3Example3cg">Your Email</label>
                  <input type="text" name="Email" id="form3Example3cg" value="{{user.Email}}" class="form-control form-control-lg"
                    onkeyup="validateemail()" />
                 
                  <span id="email-error" style="color:red ;"></span>
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label" for="form3Example1cg">Mobile</label>
                  <input type="text" name="Phone" id="form2Example3cg" value="{{user.Phone}}" class="form-control form-control-lg"
                    onkeyup="validatephone()" />
                  
                  <span id="phone-error" style="color:red ;"></span>
                </div>

