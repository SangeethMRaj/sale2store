<body>
    <div id="content" class="main-content">
        <div class="container">
            <div class="page-header">
                <div class="page-title">
                    <h3>Coupon Management</h3>
                    
                </div>
            </div>

            <div class="row layout-spacing">
                <div class="col-lg-12">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">

                                    <a href="/admin/add-coupon" class="btn btn-success mt-5 ml-3">Add coupon</a>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive mb-4">
                                <table id="column-filter" class="table table-bordered table-hover">
                                    <thead>
                                        <tr class="align-center">
                                            <th class="checkbox-column">
                                                <h4>Product Name</h4>
                                            </th>
                                            <th>
                                                <h4>Image</h4>
                                            </th>
                                            <th>
                                                <h4>Category</h4>
                                            </th>
                                            <th>
                                                <h4>Price</h4>
                                            </th>


                                            <th class="text-center">
                                                <h4>Action</h4>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        
                                        {{#each banners}}
                                        <tr class="align-center">
                                            <td class="checkbox-column">
                                                <h4>{{this.name}}</h4>
                                            </td>
                                            <td>
                                                <img style="width: 100px; height: auto;" src="/images/{{this.image.[0]}}">
                                            </td>
                                            <td class="checkbox-column">
                                                <h4>{{this.category}}</h4>
                                            </td>
                                            <td>
                                                <h4>{{this.price}}</h4>
                                            </td>


                                            <td class="text-center">

                                                <a href="/admin/remove-banner/{{this._id}}" class="btn  btn-danger"
                                                    onclick="return confirm('Do you want to delete {{this.name}} ?')">Remove</a>



                                            </td>
                                        </tr>
                                         {{/each}}
                                        
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!--  END CONTROL SIDEBAR  -->

            <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->

            <!-- END PAGE LEVEL SCRIPTS -->
</body>