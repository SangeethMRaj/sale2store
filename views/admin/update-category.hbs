<div class="row m-0">
    <div class="col-md-6 m-auto">
        <div class="containor mt-5 pl-5">
            <h2 class="text-center">Update Category</h2>

            <form action="/admin/update-category/{{category._id}}" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Category</label>
                    <input type="text" class="form-control" id="addcategory" name="category"
                        value="{{category.category}}" onkeyup="validatecategory()">
                    <span id="category-error" style="color:red"></span>
                </div>

                <div class="form-group mb-4">
                   
                        <label class="col-md-4">Image :</label>
                        <div class="col-md-8">
                            <img style="width: 50px; height: auto;" src="/images/{{category.Image.[0]}}" id="imgview">
                            <input type="file" class="form-control" value="{{category.Image}}"
                                onchange="viewImage(event)" name="Images" multiple>
                        </div>
                    
                </div>
                <button type="submit" class="btn btn-primary" onclick="return validateall()">Update Category</button>
                <span id="submitall-error"></span>
        </div>
        </form>
    </div>
</div>
</div>


<script defer src="https://cdn.crop.guide/loader/l.js?c=VRVNGT"></script>
<script>
    var categoryError = document.getElementById('category-error')
    var submitallError = document.getElementById('submitall-error')

    function validatecategory() {
        category = document.getElementById('addcategory').value;
        if (category.length == 0) {
            categoryError.innerHTML = 'Category name is required';
            return false;
        }
        categoryError.innerHTML = ''
        return true;
    }

    function validateall() {
        if (!validatecategory()) {
            submitallError.innerHTML = '';
            return false;
        }
    }
</script>