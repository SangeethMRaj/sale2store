
<body>
        <div id="content" class="main-content">
            <div class="container">
                <div class="page-header">
                    <div class="page-title">
                        <h3>Coupon Management</h3>
                       
                    </div>
                </div>
                
                <div class="row layout-spacing">
                    <div class="col-lg-12">
                        <div class="statbox widget box box-shadow">
                            <div class="widget-header">
                                <div class="row">
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                        <a href="/admin/add-coupon" class="btn btn-success mt-5 ml-3">Add Coupon</a>
                                    </div>                  
                                </div>
                            </div>
                            <div class="widget-content widget-content-area">
                                <div class="table-responsive mb-4">
                                    <table id="column-filter" class="table table-bordered table-hover">
                                        <thead>
                                            <tr class="align-center">
                                                <th class="checkbox-column"> <h4>Coupon Name</h4></th>
                                                <th><h4>Discount</h4></th>
                                                <th><h4>Expiry Date</h4></th>
                                                <th class="text-center"><h4>Coupon History</h4></th>
                                                <th class="text-center"><h4>Action</h4></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each coupon}}
                                            <tr class="align-center">
                                                <td class="checkbox-column"> <h4>{{this.coupon}}</h4> </td>
                                                <td><h4>{{this.discount}}</h4></td>
                                                <td><h4>{{this.expdate}}</h4></td>
                                                <td class="text-center">
                                                     <a href="/admin/view-couponhistory/{{this._id}}" class="btn  btn-info" >History</a>
                                                </td>
                                               
                                                
                                                <td class="text-center">
                                                 
                                                    <a href="/admin/delete-coupon/{{this._id}}" class="btn  btn-danger"
                                                    onclick="return confirm('Do you want to delete {{this.coupon}} ?')" >Delete</a>
                                                  
                                                   
                                                   
                                                </td>
                                            </tr>
                                          {{/each}}
                                        </tbody>
                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
</body>
