<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>

<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="data:image/png;base64,"
                        alt="" />

                </div>
            </div>
            <div class="col-md-6">

                <div class="profile-head">
                    {{#each usersDetails}}
                    <h5>
                        Name:<b> {{this.Name}}</b>
                    </h5>

                    <h5>
                        Mobile No:<b> {{this.Phone}}</b>
                    </h5>
                    {{/each}}
                    <div class="container d-flex justify-content-center">
                        <div class="card p-3">
                            <p class="text-dark">My Wallet</p>
                            <div class="card-bottom pt-3 px-3 mb-2">
                                <div class="d-flex flex-row justify-content-between text-align-center">
                                    <div class="d-flex flex-column"><span>Balance amount</span>
                                        <p><span class="text-white">Rs {{wallet.total}}</span></p>
                                    </div>
                                    <a href="/wallet-history" class="btn btn-primary mt-3"
                                        style="border-radius:10px">Wallet History</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                aria-controls="home" aria-selected="true">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                                aria-controls="profile" aria-selected="false">Address</a>
                        </li>

                    </ul>
                </div>
            </div>
            {{#each usersDetails}}
            <div class="col-md-2">
                <a class="btn btn-primary" style="border-radius:10px" href="/edit-userprofile/{{this._id}}">Edit
                    Profile</a>
            </div>
            {{/each}}
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">


                    <p>Accounts</p>
                    <a href="/user-add-to-cart">My Cart</a><br />
                    <a href="/orders">My Orders</a><br />
                    {{!-- <a href="">WordPress</a><br />
                    <a href="">WooCommerce</a><br />
                    <a href="">PHP, .Net</a><br /> --}}
                </div>
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        {{#each usersDetails}}
                        <div class="row">
                            <div class="col-md-6">
                                <label>Name</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{this.Name}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{this.Email}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Phone</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{this.Phone}}</p>
                            </div>
                        </div>
                        {{/each}}
                        <a href="/change-password" class="btn btn-success mt-5">Change password</a>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">


                        <div class="card p-3 py-3 mt-3 card-1 text-center">

                            <div class="p-3 card-2">
                                {{#each address}}





                                <div class="accordion" id="accordionExample">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingOne">
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapseOne" aria-expanded="true"
                                                aria-controls="collapseOne">
                                                {{this.name}}
                                            </button>
                                        </h2>
                                        <div id="collapseOne" class="accordion-collapse collapse show"
                                            aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                            <div class="accordion-body">
                                                <div class="d-flex flex-column ms-3">
                                                    <h6 class="fw-bold">{{this.name}}</h6>
                                                    <span><b>{{this.address}}</b></span>
                                                    <b>{{this.city}}</b>
                                                    <b>{{this.state}}</b>
                                                    <b>{{this.pincode}}</b>
                                                    <b>{{this.phone}}</b>
                                                    <a class="btn btn-danger" href="/delete-address/{{this._id}}"
                                                        onclick="return confirm('Do you want to delete {{this.name}} ?')">delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                                {{/each}}







                                <div class="p-3 card-child mt-4 py-4">

                                    <div class="d-flex flex-row align-items-center">


                                        <div class="d-flex flex-column ms-3 mt-1">
                                            <a href="/add-address" class="fw-bold text-primary">Add New Address</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</form>
</div>

