<body>
    <div id="content" class="main-content">
        <div class="container">
            <div class="page-header">
                <div class="page-title">
                    <h3>Discount</h3>

                </div>
            </div>
            <a href="/admin/category-offer" class="btn  btn-info ">Add Discount</a>
            <div class="row layout-spacing mt-4">
                <div class="col-lg-12">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>Category Offer</h4>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive mb-4">
                                <table id="column-filter" class="table table-bordered table-hover">
                                    <thead>
                                        <tr class="align-center">
                                            <th class="checkbox-column">
                                                <h4>Sl.No</h4>
                                            </th>
                                            <th>
                                                <h4>Name</h4>
                                            </th>
                                            <th>
                                                <h4>Email</h4>
                                            </th>
                                            

                                            <th class="text-center">
                                                <h4>Action</h4>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each offer}}
                                        <tr class="align-center">
                                            <td class="checkbox-column">
                                                <h4>{{inc @index}}</h4>
                                            </td>
                                            <td>
                                                <h4>{{this.category}}</h4>
                                            </td>
                                            <td>
                                                <h4>{{this.categoryOffer}}</h4>
                                            </td>
                                            <td class="text-center">
                                                <a href="/admin/delete-offer/{{this._id}}/{{this.category}}"
                                                    class="btn btn-success" onclick="return confirm('Do you want to delete {{this.name}} ?')">Delete</a>
                                        </tr>
                                        {{/each}}
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</body>

</html>