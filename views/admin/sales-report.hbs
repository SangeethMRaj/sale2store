<!--  BEGIN CONTENT PART  -->
<div id="content" class="main-content">
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h3>Sales Report</h3>
               
            </div>
        </div>


        <div class="row">
                    <div class="col-lg-6 layout-spacing">
                        <div class="statbox widget box box-shadow">
                            <div class="widget-header">                                
                                <div class="row">
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                        
                                    </div>                                                                        
                                </div>
                            </div>
                            <div class="widget-content widget-content-area">
                                <form action="" method="post">
                                   
                                    <div class="form-group mb-4">
                                        <label>From</label>
                                        <input type="date" class="form-control" name="fromdate" id="fromdate">
                                    </div>
                                    <div class="form-group">
                                        <label>To</label>
                                        <input type="date" class="form-control" name="todate" id="todate">
                                    </div>
                                    {{!-- <div>
                                        <input type="text" name="user" id="" value="{{user._id}}" hidden>
                                    </div> --}}
                                    <button type="submit" class="btn btn-button-7 mt-3 mb-4">Search</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div> 



        <div class="row" id="cancel-row">
            <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            

                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Sales Report</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="table-responsive mb-4">
                            <table id="html5-extension" class="table table-striped table-bordered table-hover"
                                style="width:100%">
                                <thead>
                                    <tr class="align-center">
                                        <th>
                                            <h4>User</h4>
                                        </th>
                                        <th>
                                            <h4>Products</h4>
                                        </th>
                                        <th>
                                            <h4>Date</h4>
                                        </th>
                                        <th>
                                            <h4>Payment</h4>
                                        </th>
                                        <th>
                                            <h4>Price</h4>
                                        </th>
                                        <th>
                                            <h4>Status</h4>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each report}}
                                    <tr class="align-center">
                                        <td>
                                            <h5>{{this.userId.Name}}</h5>
                                        </td>
                                        <td>
                                            <h5>{{this.item.name}}</h5>
                                        </td>
                                        <td>
                                            <h5>{{this.date}}</h5>
                                        </td>
                                        <td>
                                            <h5>{{this.paymentMethod}}</h5>
                                        </td>
                                        <td>
                                            <h5>Rs {{totalAmount}}</h5>
                                        </td>
                                        <td>
                                            <h5>{{this.status}}</h5>
                                        </td>
                                        
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
<!--  END CONTENT PART  -->
</div>
<!-- END MAIN CONTAINER -->

