    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuReference1">
        <a class="dropdown-item" href="/admin/ship-order-status/{{this._id}}"><h6>Ship Order</h6></a>
        <a class="dropdown-item" href="/admin/cancel-order-status/{{this._id}}"><h6>Cancel Order</h6></a>
        <a class="dropdown-item" href="/admin/delivered-order-status/{{this._id}}"><h6>Delivered Order</h6></a>
         <a class="dropdown-item" href="/admin/outfordelivery-order-status/{{this._id}}">Out for delivery</a>
        
</div>
                                        </td>
                                            </tr>
                                            {{/each}} 
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
