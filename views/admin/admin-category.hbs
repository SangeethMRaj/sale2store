<!--  BEGIN CONTENT PART  -->
<div id="content" class="main-content">
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h3>CATEGORY</h3>
                
            </div>
        </div>
        <a href="/admin/add-category" class="btn  btn-info ">Add Category</a>

        <div class="row mt-4">
            <div class="col-lg-12 col-md-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Category</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="table-responsive">
                            <table id="example1" class="table table-bordered table-hover mb-4">
                                <thead>
                                    <tr>
                                        <th class="align-center">
                                            <h3>Sl.No</h3>
                                        </th>
                                        <th class="align-center">
                                            <h3>Category</h3>
                                        </th>

                                        <th class="text-center">
                                            <h3>Action</h3>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each categories}}
                                    <tr>

                                        <td class="align-center">
                                            <h4>{{inc @index}}</h4>
                                        </td>
                                        <td class="align-center">
                                            <h4>{{this.category}}</h4>
                                        </td>
                                        
                                       
                                        
                                        <td class="align-center">
                                             <a href="/admin/update-category/{{this._id}}" class="btn btn-info"
                                             onclick="return confirm('Do you want to update {{this.category}} ?')">Update</a>

                                            <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger"
                                                onclick="return confirm('Do you want to delete {{this.category}} ?')">Delete</a>

                                        </td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!--  END CONTENT PART  -->
