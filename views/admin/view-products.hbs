

        <!--  BEGIN CONTENT PART  -->
        <div id="content" class="main-content">
            <div class="container">
                <div class="page-header">
                    <div class="page-title">
                        <h3>PRODUCTS</h3>
                        
                    </div>
                </div>
                 <a href="/admin/add-products" class="btn  btn-info ">Add Product</a>
                <div class="row mt-4" id="cancel-row">
                    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                        <div class="statbox widget box box-shadow">
                            <div class="widget-header">
                                <div class="row">
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                        <h4>Products</h4>
                                    </div>                 
                                </div>
                            </div>
                            <div class="widget-content widget-content-area">
                                <div class="table-responsive mb-4">
                                    <table id="html5-extension" class="table table-striped table-bordered table-hover" style="width:100%">
                                        <thead>
                                            <tr class="align-center">
                                                <th><h2>Name</h2></th>
                                                <th><h2>Category</h2></th>
                                                
                                                <th><h2>Color</h2></th>
                                                <th><h2>Price</h2></th>
                                                <th><h2>Qty</h2></th>
                                                <th><h2>Size</h2></th>
                                               
                                                <th><h2>Images</h2></th>
                                                <th><h2>Action</h2></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each products}}
                                            <tr class="align-center">
                                                <td><h4>{{this.name}}</h4></td>
                                                <td><h4>{{this.category}}</h4></td>
                                                <td><h4>{{this.color}}</h4></td>
                                                <td><h4>{{this.price}}</h4></td>
                                                <td><h4>{{this.qty}}</h4></td>
                                                <td><h4>{{this.size}}</h4></td>
                                                
                                                <td>
                                                    <img style="width: 100px; height: auto;" src="/images/{{this.image.[0]}}">
                                                </td>
                                                  <td class="align-center">
                                             <a href="/admin/update-products/{{this._id}}" class="btn btn-info"
                                             onclick="return confirm('Do you want to update {{this.name}} ?')">Update</a>

                                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                                onclick="return confirm('Do you want to delete {{this.name}} ?')">Delete</a>
                                                <br>
                                                {{#if banner}}
                                                <a href="/admin/remove-banner/{{this._id}}" class="btn btn-primary mt-2">Remove Banner</a>
                                                {{else}}
                                                <a href="/admin/add-banner/{{this._id}}" class="btn btn-success mt-2">Add Banner</a>
                                                {{/if}}
                                        </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!--  END CONTENT PART  -->
    </div>
    <!-- END MAIN CONTAINER -->
    
